<body>

  <main>
    <p id="notice"></p>
    <div class='container px-5 px-sm-0'>
<div class='row'>

<%= render 'users/left',user:@user %>


<div class='col-md-8 offset-md-1'>
  <h2>Books</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "ほんとに消す？"} %></td>
      </tr>
    <% end %>
       
      
  </tbody>
</table>
</div>
</div>
</div>
  </main>
<footer>
<div class='container mt-5'>
  <div class='row'>
    <div class='mx-auto'>
        <p>CopyRight Infratop.inc</p>
    </div>
</div>
</div>
</footer>

</body>